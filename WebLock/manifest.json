{
  "manifest_version": 3,
  "name": "WebLock",
  "description": "Simple website locker",
  "version": "1.0",
  "icons": { "128": "icon_off.png" },
  "minimum_chrome_version": "92",
  "permissions": ["storage", "tabs", "webNavigation"],
  "background": {
    "service_worker": "background.js", "type": "module"
  },
  "action": {
    "default_popup": "page_main.html"
  }
}
